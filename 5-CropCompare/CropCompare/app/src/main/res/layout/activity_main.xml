<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/midori"
    tools:context=".MyActivity">

    <View
        android:id="@+id/activity_transition_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:transitionName="holder1"
        android:background="@color/midori"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:background="@color/midoriAccent">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stateSpinner"
            android:layout_above="@+id/fab_button"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="192dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/acreage"
            android:hint="@string/acreage_hint"
            android:layout_marginBottom="63dp"
            android:layout_above="@+id/fab_button"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/fab_button"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:transitionName="fab"

            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:elevation="5dp"
            android:background="@drawable/ripple_round"
            android:stateListAnimator="@anim/fab_anim"
            android:onClick="onFabPressed"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="22dp"
            android:text="@string/next_button" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/cropcomparelogo"
        android:paddingLeft="10dp"
        android:padding="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
