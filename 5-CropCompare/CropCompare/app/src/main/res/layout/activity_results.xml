<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/midori"
    tools:context=".MyActivity" >

    <View
        android:id="@+id/activity_transition_header"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:transitionName="holder1"
        android:background="@color/midori"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/cropcomparelogo"
        android:padding="40dp"
        android:layout_alignBottom="@+id/activity_transition_header"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/row_container2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_transition_header"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:background="@color/midoriAccent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:scaleX="0"
            android:scaleY="0"
            android:text=" "
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/_" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/yieldResultTextView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:scaleX="0"
            android:scaleY="0"
            android:text="@string/yieldResultTxt"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/priceResultTextView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:scaleX="0"
            android:scaleY="0"
            android:text="@string/priceResultTxt"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/costResultTextView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:scaleX="0"
            android:scaleY="0"
            android:text="@string/costResultTxt"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/totalResultTextView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:scaleX="0"
            android:scaleY="0"
            android:text="@string/totalResultTxt"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>


    <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Results"
        android:id="@+id/textView2"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/activity_transition_header"  />

</RelativeLayout>
