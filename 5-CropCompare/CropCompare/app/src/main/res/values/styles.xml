<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- android theme colors -->
        <item name="android:colorPrimary">@color/midori</item>
        <item name="android:colorPrimaryDark">@color/midori</item>
        <item name="android:colorAccent">@color/midori</item>
        <item name="android:navigationBarColor">@color/midori</item>

        <!-- android transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

</resources>
